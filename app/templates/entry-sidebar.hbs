<div class="cms cms-sidebar-top">
  <h3 class="cms cms-sidebar-title">Entry Settings</h3>
</div>
<div class="cms cms-sidebar-content">
  {{#each meta as |widget|}}
    {{#unless widget.hidden}}
      <div class="cms cms-meta">
        <div class="cms cms-meta-control">
          <label class="cms cms-label">{{widget.label}}</label>
          {{cms-widget widget=widget type="control"}}
        </div>
      </div>
    {{/unless}}
  {{/each}}
</div>
<div class="cms cms-sidebar-bottom">
  <div class="cms cms-sidebar-actions">
  <a {{action "toggleSidebar"}} class="cms cms-action cms-btn-close">
    <i class="cms cms-icon fa fa-times" aria-hidden="true"></i>Close</a>
    {{#if canDelete}}
    <a {{action 'delete'}} class="cms cms-action cms-btn-delete">
      <i class="cms cms-icon fa fa-trash-o" aria-hidden="true"></i>
      Delete
    </a>
    {{/if}}
  </div>
</div>
